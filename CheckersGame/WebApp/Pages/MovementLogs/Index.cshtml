@page
@model WebApp.Pages_MovementLogs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovementLog[0].CheckersGame)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovementLog[0].MovementFromX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovementLog[0].MovementFromY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovementLog[0].MovementToX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovementLog[0].MovementToY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovementLog[0].WhoMoved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovementLog[0].EatenCheckerX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovementLog[0].EatenCheckerY)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.MovementLog) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CheckersGame.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovementFromX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovementFromY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovementToX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovementToY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhoMoved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EatenCheckerX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EatenCheckerY)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
